{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "indent": ["warn", 4],
    "comma-dangle": ["warn", "never"],
    "arrow-spacing": "warn",
    "no-multiple-empty-lines": ["warn", { "max": 2 }],
    "eol-last": ["warn", "always"]
  }
}
